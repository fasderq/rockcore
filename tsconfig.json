{
  "compilerOptions": {
      "module": "CommonJS",
      "lib": [
          "ESNext"
      ],
      "skipLibCheck": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "allowJs": true,
      "checkJs": false,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "ESNext",
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": "src",
      "strictNullChecks": true,
      "incremental": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "typeRoots": [
          "node_modules/@types",
          "@types"
      ],
      "paths": {
          "@app/*": [
              "*"
          ],
          "@shared": [
              "shared"
          ]
      }
  },
  "include": [
      "./**/*"
  ],
}